@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .flex-center{
      display:flex;
        justify-content:center;
        align-content:center;
    }
</style>


<h1 class="flex-center"  >@ViewData["Title"]</h1>

<div class="row flex-center"  >
    <div class="col-md-4" >
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating" style="padding-bottom:15px">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating" style="padding-bottom:15px"> 
                <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating" style="padding-bottom:15px">
                <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating" style="padding-bottom:15px">
                <select asp-for="Input.Role" asp-items="Model.Roles" class="form-control"></select>
                <label asp-for="Input.Role"></label>
            </div>
            <div class="form-floating" style="padding-bottom:15px">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating" >
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <br />
            <button  id="registerSubmit" type="submit" class="w-100 btn btn-lg button-green">Register</button>
        </form>
    </div>

</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
<style>
    .button-green{
        color: #fff;
    background-color: #4daf54;
    border-color: #4daf54;
    }
</style>