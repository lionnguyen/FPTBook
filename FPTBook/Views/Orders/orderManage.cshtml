@model IEnumerable<FPTBook.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Order Manager</h1>

<form asp-action="orderManage" method="get">
    <div class="form-actions no-color">
        <p>
             <input style="width:500px; height: 40px; border-radius:10px" type="text" name="SearchString" placeholder="Find by Email"  value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" style=" border: 1px solid #0d6efd; color: #fff; background-color: #0d6efd; " />
        </p>
    </div>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UId)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.User.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
             <th>
                       
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UId)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.User.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td >
                    <a asp-controller="OrderDetails" asp-action="orderManager" asp-route-id="@item?.Id" class="btn btn-primary">Details
                        <i class="fa-solid fa-info"></i>
                    </a> 
                </td>
            </tr>
        }
    </tbody>
</table>