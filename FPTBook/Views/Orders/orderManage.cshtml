@model IEnumerable<FPTBook.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-bottom:20px">Order Manager</h1>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UId)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.User.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
             <th>
                       
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UId)
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => item.User.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td >
                    <a asp-controller="OrderDetails" asp-action="orderManager" asp-route-id="@item?.Id" class="btn button-green">Details
                        <i class="fa-solid fa-info"></i>
                    </a> 
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .button-green{
        color: #fff;
    background-color: #4daf54;
    border-color: #4daf54;
    }
</style>