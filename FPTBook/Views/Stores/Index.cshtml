@model IEnumerable<FPTBook.Models.Store>

@{
    ViewData["Title"] = "Index";
}

<h1>Manager Stores</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slogan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slogan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" class="button-green"   asp-route-id="@item.Id">Edit
                    <i class="fas fa-edit"></i
                </a> |
                <a asp-action="Details" class="button-green" asp-route-id="@item.Id">Details
                    <i class="fa-solid fa-info"></i>
                </a> |
                <a asp-action="Delete"  class="button-green"   asp-route-id="@item.Id">Delete
                    <i class="fas fa-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>


<style>
       
    .button-green{
        text-decoration:none;
        color: #4daf54;
    }

    .button-green:hover{
        color: #4daf54;
    }
</style>